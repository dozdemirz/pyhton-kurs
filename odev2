def ogrenci_ekle():
    ad = input("Öğrencinin adı: ")
    soyad = input("Öğrencinin soyadı: ")
    ogrenciler.append(adsoyad)


    def ogrenci_sil(ogrenciler, ad, soyad):
      for ogrenci in ogrenciler:                               ---->  bu kod sanırım biraz elverişsiz çünkü silinecek kişiyi terminalden yazamıyoruz ama normal çözemedim nedense
        if ogrenci[0] == ad and ogrenci[1] == soyad:
            ogrenciler.remove(ogrenci)


def cok_ogrenci_ekle(ogrenci_listesi):
      for ogrenci in ogrenci_listesi:
        ogrenci_ekle(ogrenci)


    for numara, ogrenci in enumerate(ogrenci_listesi):
      print(f"{ogrenci} öğrencisinin numarası: {numara}")

