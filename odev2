    ad_soyad = input("Öğrencinin adını ve soyadını girin: ")
for i in range(len(ogrenciler)):
    if ogrenciler[i] == ad_soyad:
        ogrenci_no = i
        print("Öğrenci numarası:", ogrenci_no)
        break
    else:
      print("Öğrenci yok.")



    def cok_ogrenci_sil(ogrenci_listesi):
      i = 0
      while i < len(ogrenci_listesi):
        ogrenci_sil(ogrenci_listesi[i])
        i += 1
    
